source 'http://rubygems.org'

# Rails
gem 'rails', '3.1.0'
gem 'rake', '0.9.2'

# MySQL Driver
gem 'mysql2'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

# Javascript stuff.
gem 'json'
gem 'jquery-rails'

# For file attachments.
gem 'paperclip'

# Bitly
gem 'bitly'